.security-block
    
    > div
        text-align: left;
        border-radius: 5px;
        box-sizing: content-box;
        clear: both;
        font-size: 15px;
        margin: 15px 0;
        padding: 15px;
        position: relative;
        background-color: #fff;
        border: 1px solid #ddd;
        margin-top: 20px;
        position relative
        padding-left: 93px;
        font-family: PT Sans,sans-serif;

    > div
        display flex
        

        p
            color: #666;
            font-size: 12px;
            margin 0
            font-family: PT Sans,sans-serif;

    header
        color: #666;
        display: block;
        font-size: 16px;
        margin: 5px 0;
        text-transform: uppercase;

    figure
        width: 82px;
        min-height 84px
        background-color: #267d5c;
        height 100%
        background-image url('/assets/img/unicred/lock.png')
        background-position center center
        background-repeat no-repeat
        border-radius: 4px 0 0 4px;
        position absolute
        top 0
        left 0