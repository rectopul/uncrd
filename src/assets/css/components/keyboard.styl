.boxKeyboard

    &.boxDocuments
        input
            width: 100%
            cursor text
            background-color #fff !important

    .symbol-keyboard
        display none
        &.show
            display block

    .text-keys
        &.hide
            display none

    input
        cursor: not-allowed;
        opacity: 1
        background-color: #ececec!important
        margin: 0 auto;
        width: 80%
        background-image: none;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-shadow: inset 0 1px 1px rgba(0,0,0,0.08);
        height: 34px;
        padding: 6px 12px;
        transition: border-color .15s ease-in-out,box-shadow .15s ease-in-out;
        color: #555;
        font-size: 14px;
        outline none

    .keyboard
        ul
            display flex
            list-style none
            justify-content center
            flex-wrap wrap
            padding 0

            button
                width initial
                min-width initial
                background-image: none
                border: 1px solid transparent
                border-radius: 4px
                cursor: pointer
                display: inline-block
                font-size: 14px
                font-weight: 400
                line-height: 1.428571429
                margin-bottom: 0
                padding: 6px 12px
                text-align: center
                margin: 5px 8px

                &:hover
                    background-color: #43a376!important;
                    border-color: #43a376;