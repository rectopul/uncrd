.formLogin
    width 100%
    display flex
    justify-content flex-end

    .formLogin__body
        display flex
        align-items center

        button
            appearance none
            color #fff
            background-color #285148
            border 1px solid transparent
            border-radius 4px
            font-size 14px
            font-weight 400
            line-height: 1.428571429
            padding 6px 12px
            text-align center
            user-select: none
            white-space: nowrap

            &:active
                box-shadow: inset 0 3px 5px rgb(0 0 0 / 13%)
                background-image: none

        .form-inputs
            display flex
            align-items center

            div
                display flex
                background-color #fff
                margin-right 10px
                border-radius 5px
                align-items center
                padding 5px 12px
                font-family PTSans

                label
                    margin 0
                    height 24.84px
                    color #999
                    cursor text
                    font-size 16px
                    font-weight 400

                input
                    border 0
                    height 24.84px
                    width 65px
                    color #000
                    padding 0
                    box-shadow initial
                    outline none
                    margin-left 7px

                    &:disabled
                        background-color transparent
                        color: #999
                        font-size: 16px
                        font-family: PT Sans,sans-serif

                    &:focus
                        box-shadow initial